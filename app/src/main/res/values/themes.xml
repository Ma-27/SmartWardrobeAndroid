<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SmartWardrobe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green</item>  <!-- 指定主要颜色 -->
        <item name="colorPrimaryDark">#81C784</item>  <!-- 确保状态栏颜色与主要颜色一致 -->
        <item name="colorAccent">#004D40</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#00FF00</item>
    </style>

    <style name="Theme.SmartWardrobe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 扩展主题，设置状态栏颜色和图标颜色 -->
    <style name="Theme.SmartWardrobe.CustomStatusBar" parent="Theme.SmartWardrobe.NoActionBar">
        <!-- 设置状态栏颜色 -->
        <item name="android:statusBarColor">@color/background_green</item>
    </style>

    <style name="Theme.SmartWardrobe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmartWardrobe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Theme for activities without an action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>