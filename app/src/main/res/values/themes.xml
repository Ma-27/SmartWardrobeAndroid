<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SmartWardrobe" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/navColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.SmartWardrobe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmartWardrobe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmartWardrobe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Theme for activities without an action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>