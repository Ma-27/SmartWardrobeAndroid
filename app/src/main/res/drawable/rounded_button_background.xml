<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框层 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="6dp"
                android:color="@color/green_heavy" /> <!-- 边框颜色，深绿色 -->
            <corners android:radius="20dp" /> <!-- 圆角半径 -->
        </shape>
    </item>
    <!-- 内部填充层 -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_custom" /> <!-- 按钮背景色，蓝色 -->
            <corners android:radius="20dp" /> <!-- 调整内层圆角半径 -->
        </shape>
    </item>
</layer-list>
